{% extends '::base.html.twig' %}

{%- block meta_title -%}
    {{ 'home.meta_title'|trans({}, 'cocorico_meta') ~ " - " ~ cocorico_site_name }}
{%- endblock -%}

{%- block meta_description -%}
    {{ 'home.meta_desc'|trans({}, 'cocorico_meta') }}
{%- endblock -%}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('css/vendor/animate.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/vendor/morphext.css') }}" rel="stylesheet">
    
    <style>
        .rotate, .rotate-price {
            color: #9ad0ff;
        }
    </style>
{% endblock %}

{% block theme %}home-page{% endblock %}

{% block layout %}
    {% embed '@CocoricoCore/Frontend/layout.html.twig' %}

        {% trans_default_domain 'cocorico_home' %}

        {% block sub_header %}
            {#<!-- visual -->#}
            <div class="visual text-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-lg-8 col-lg-push-2">
                            <div class="title-holder">
                                <div class="title-frame">
                                    <h1>
                                       Book <span class="rotate">Sunny Leone, Guru Randhawa, your favorite Artist</span> for the price of a monthly <span class="rotate-price">Gym Membership, Dish TV Subscription, Phone Bill</span>
                                    </h1>
                                </div>
                            </div>
                        </div>
                        {{ render(controller('CocoricoCoreBundle:Frontend/ListingSearch:searchHomeForm')) }}
                    </div>
                </div>
            </div>
        {% endblock %}

        {% block main %}
            <!-- infoarea -->
            <div class="infoarea container">
                <div class="row">
                    <!-- info-box -->
                    <div class="col-xs-12 col-sm-6 col-md-4 info-box">
                        <img src="{{ asset('images/icon1.png') }}" alt="icon description" class="pull-left icon">

                        <div class="textbox">
                            <h2><a href="#">Lorem ipsum dolor sit amet, consectetur adipiscing.</a></h2>

                            <p>
                                Mipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor
                                incididunt ut
                                labore.
                            </p>
                        </div>
                    </div>
                    <!-- info-box -->
                    <div class="col-xs-12 col-sm-6 col-md-4 info-box">
                        <img src="{{ asset('images/icon2.png') }}" alt="icon description" class="pull-left icon">

                        <div class="textbox">
                            <h2><a href="#">Lorem ipsum dolor sit amet ?</a></h2>

                            <p>
                                Mipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor
                                incididunt ut
                                labore.
                            </p>
                        </div>
                    </div>
                    <div class="clearfix visible-sm"></div>
                    <!-- info-box -->
                    <div class="col-xs-12 col-sm-6 col-md-4 info-box">
                        <img src="{{ asset('images/icon3.png') }}" alt="icon description" class="pull-left icon">

                        <div class="textbox">
                            <h2><a href="#">Lorem ipsum dolor sit amet, consect</a></h2>

                            <p>
                                Mipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor
                                incididunt ut
                                labore.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            {% include 'CocoricoCoreBundle:Frontend/Home:_high_rank.html.twig'  with {
            'listings': listings
            } only %}

            {{ render(controller('CocoricoCoreBundle:Frontend/Home:rssFeeds')) }}

        {% endblock %}

        {% block modal %}
            {% include 'CocoricoCoreBundle:Frontend/Common:_modal.html.twig' only %}
        {% endblock %}
    {% endembed %}
{% endblock %}


{% block javascripts %}
    {{ parent() }}

    {#Geocoding #}
    {% include '@CocoricoCore/Frontend/ListingResult/js/_geocoding_js.html.twig' with {
    'map_elt': '',
    'auto_complete_elt': '#location'
    } only %}

    <script>
        // Categories
        $(function () {

            // Set default favourites in the listing
            setDefaultFavourites();

            initMultiSelect(
                    '#categories',
                    '{{ "multiselect.all_selected"|trans({}, "cocorico") }}',
                    '{{ "multiselect.none_selected"|trans({}, "cocorico") }}',
                '{{ "multiselect.num_selected"|trans({}, "cocorico") }}'
            );
        });
    </script>
    
    
    <script type="text/javascript" src="{{ asset('js/vendor/morphext.min.js') }}"></script>
    <script type="text/javascript">
         $(".rotate").Morphext({
            animation: "pulse", // Overrides default "bounceIn"
            separator: ",", // Overrides default ","
            speed: 4000, // Overrides default 2000
            complete: function () {
                // Overrides default empty function
            }
        });

        $(".rotate-price").Morphext({
            animation: "pulse", // Overrides default "bounceIn"
            separator: ",", // Overrides default ","
            speed: 4000, // Overrides default 2000
            complete: function () {
                // Overrides default empty function
            }
        });

    </script>
{% endblock %}

{% block markup_jsonld %}
    {{ parent() }}

    {% include 'CocoricoSeoBundle:Frontend:Home/_index_markup.jsonld.twig' ignore missing with {
    'listings': listings
    } only %}
{% endblock %}